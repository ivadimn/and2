<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ivadimn.a0205threads.activities.HandleThreadActivity">

    <Button
        android:id="@+id/btn_load_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_insert_id"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/load_data"
        />
    <Button
        android:id="@+id/btn_insert_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_size"
        app:layout_constraintLeft_toRightOf="@id/btn_load_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/insert_data"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/person_list_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_load_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.v4.widget.ContentLoadingProgressBar
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:id="@+id/loading_data_id"
        style="?android:attr/progressBarStyleLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        />

</android.support.constraint.ConstraintLayout>
