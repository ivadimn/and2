<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ivadimn.a0207alarm.activities.EventActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name_id"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/view_margin">
        <EditText
            android:id="@+id/event_name_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_edit_color"
            android:inputType="textMultiLine"
            android:gravity="start"
            android:hint="@string/event_name"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_moment_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/event_moment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_name_id"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@drawable/button_shape1"
        />

</android.support.constraint.ConstraintLayout>
